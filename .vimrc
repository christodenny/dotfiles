" size of hard tabstop
set tabstop=2
" size of an indent
set shiftwidth=2
set expandtab
" autoindent
set autoindent
set smartindent
imap jk <Esc>
" line numbers
set nu
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
set mouse=a
set pastetoggle=<F2>
set colorcolumn=80 textwidth=79
set scrolloff=5
set clipboard+=unnamedplus
